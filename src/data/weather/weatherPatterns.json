{
  "weatherPatterns": {
    "clear": {
      "probability": 0.4,
      "averageDuration": 240,
      "intensityRange": [20, 60],
      "effects": {
        "movementModifier": 1.0,
        "survivalModifier": 1.0,
        "skillCheckModifier": 0,
        "eventProbabilityModifier": 1.0
      },
      "description": "Il cielo è sereno e la visibilità è ottima.",
      "transitionsTo": ["light_rain", "fog", "wind"]
    },
    "light_rain": {
      "probability": 0.25,
      "averageDuration": 120,
      "intensityRange": [30, 70],
      "effects": {
        "movementModifier": 0.9,
        "survivalModifier": 1.1,
        "skillCheckModifier": -1,
        "eventProbabilityModifier": 0.8
      },
      "description": "Una pioggia leggera cade dal cielo grigio.",
      "transitionsTo": ["clear", "heavy_rain", "fog"]
    },
    "heavy_rain": {
      "probability": 0.15,
      "averageDuration": 90,
      "intensityRange": [60, 90],
      "effects": {
        "movementModifier": 0.7,
        "survivalModifier": 1.3,
        "skillCheckModifier": -3,
        "eventProbabilityModifier": 0.6
      },
      "description": "La pioggia battente riduce drasticamente la visibilità.",
      "transitionsTo": ["light_rain", "storm", "clear"]
    },
    "storm": {
      "probability": 0.1,
      "averageDuration": 60,
      "intensityRange": [70, 100],
      "effects": {
        "movementModifier": 0.5,
        "survivalModifier": 1.5,
        "skillCheckModifier": -5,
        "eventProbabilityModifier": 0.4
      },
      "description": "Una tempesta violenta scuote il mondo con vento e pioggia torrenziale.",
      "transitionsTo": ["heavy_rain", "wind", "clear"]
    },
    "fog": {
      "probability": 0.08,
      "averageDuration": 180,
      "intensityRange": [40, 80],
      "effects": {
        "movementModifier": 0.8,
        "survivalModifier": 1.0,
        "skillCheckModifier": -2,
        "eventProbabilityModifier": 1.2
      },
      "description": "Una nebbia densa avvolge il paesaggio, limitando la visibilità.",
      "transitionsTo": ["clear", "light_rain"]
    },
    "wind": {
      "probability": 0.02,
      "averageDuration": 300,
      "intensityRange": [50, 85],
      "effects": {
        "movementModifier": 0.9,
        "survivalModifier": 1.2,
        "skillCheckModifier": -1,
        "eventProbabilityModifier": 1.1
      },
      "description": "Un vento forte soffia attraverso la desolazione, portando polvere e detriti.",
      "transitionsTo": ["clear", "storm"]
    }
  },
  "transitionRules": {
    "timeBasedModifiers": {
      "dawn": {
        "fogProbability": 1.5,
        "clearProbability": 1.2
      },
      "day": {
        "stormProbability": 0.8,
        "clearProbability": 1.1
      },
      "dusk": {
        "windProbability": 1.3,
        "fogProbability": 1.2
      },
      "night": {
        "stormProbability": 1.4,
        "heavyRainProbability": 1.2
      }
    },
    "seasonalModifiers": {
      "spring": {
        "lightRainProbability": 1.3,
        "fogProbability": 1.2
      },
      "summer": {
        "clearProbability": 1.4,
        "stormProbability": 1.1
      },
      "autumn": {
        "windProbability": 1.3,
        "heavyRainProbability": 1.2
      },
      "winter": {
        "stormProbability": 1.2,
        "fogProbability": 1.1
      }
    }
  }
}