{
  "project": {
    "name": "The Safe Place",
    "version": "0.6.4",
    "codename": "How hard is it to wade across a river?",
    "analysisDate": "2025-01-28",
    "baseDirectory": "."
  },
  "modules": {
    "codeScanner": {
      "enabled": true,
      "includePatterns": ["src/**/*.ts", "src/**/*.tsx"],
      "excludePatterns": ["src/**/*.test.ts", "src/**/*.spec.ts"],
      "complexityThreshold": 10,
      "duplicateThreshold": 0.1
    },
    "functionalityTester": {
      "enabled": true,
      "testSuites": ["movement", "inventory", "save-load", "events", "weather", "shelters", "character"],
      "regressionBaseline": "documentazione/anti-regressione/ANTI-REGRESSIONE-v0.6.4.md"
    },
    "dataAnalyzer": {
      "enabled": true,
      "itemDatabase": "src/data/items/itemDatabase.ts",
      "eventFiles": "public/events/*.json",
      "messageArchive": "src/data/MessageArchive.ts"
    },
    "documentationAnalyzer": {
      "enabled": true,
      "documentationPath": "documentazione/",
      "changelogPath": "documentazione/changelog/",
      "antiRegressionPath": "documentazione/anti-regressione/"
    }
  },
  "thresholds": {
    "criticalComplexity": 15,
    "maxDuplicationRatio": 0.15,
    "minTestCoverage": 0.8,
    "maxDependencyDepth": 5
  },
  "output": {
    "format": "markdown",
    "includeDetails": true,
    "generateDiagrams": true,
    "outputPath": "analisi-microscopica/report/"
  },
  "prioritization": {
    "severityWeights": {
      "critical": 100,
      "high": 75,
      "medium": 50,
      "low": 25
    },
    "categoryWeights": {
      "functionality": 1.0,
      "architecture": 0.8,
      "data_consistency": 0.9,
      "code_quality": 0.6,
      "performance": 0.7,
      "documentation": 0.4
    }
  }
}